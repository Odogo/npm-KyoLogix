{
    "compilerOptions": {
        // Language & Output
        "target": "es2024",
        "module": "nodenext",
        "lib": ["ES2024"],
        "outDir": "dist",
        "rootDir": "src",

        // Strictness
        "strict": true, // enable all strict type-checking options
        "noImplicitAny": true, // catch missing types
        "noUnusedLocals": true, // flag unused variables
        "noUnusedParameters": true, // flag unused params
        "noImplicitReturns": true, // require return statements on all paths
        "noFallthroughCasesInSwitch": true, // catch switchâ€¦case fall-through

        // Module Resolution
        "moduleResolution": "nodenext", // mimic Node.js resolution
        "esModuleInterop": true, // allow default imports from CommonJS
        "forceConsistentCasingInFileNames": true, // ensure imports match file casing
        "skipLibCheck": true, // speed up compilation by skipping .d.ts checks

        // Modern Features
        "resolveJsonModule": true, // import .json files
        "isolatedModules": true, // required for Babel or ts-node
        "sourceMap": true, // generate source maps

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        // Library Only
        "declaration": true,
        "declarationMap": true
    },
    "include": [ "src", "tests/consumers/esm/index.mjs" ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts"
    ]
}